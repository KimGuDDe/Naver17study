import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import day0103db.ex1OracleConnect;

public class Ex2MysqlConnect {
	static final String MYSQL_DRIVER="com.mysql.cj.jdbc.Driver";
	String url = "jdbc:mysql://localjost:3306/study502?serverTimezone=Asia/Seoul";
	String username = "root";
	String password = "1234";
	
	public Ex2MysqlConnect()
	{
	try {
		Class.forName(MYSQL_DRIVER);
		System.out.println("mysql 드라이버 생성!");
	} catch (ClassNotFoundException e) {
		System.out.println("mysql 드라이버 실패"+e.getMessage());
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	// TODO Auto-generated constructor stub
	}
	public Connection getConnection()
	{
		Connection conn = null;
		try {
			conn = DriverManager.getConnection(url, username, password);
			System.out.println("성공");
		} catch (SQLException e) {
			System.out.println("실패"+e.getMessage());
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return conn;
	}
	
	public void personWriteData()
	{
		Connection conn=null;
		conn=this.getConnection();
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Ex2MysqlConnect ex2 = new Ex2MysqlConnect();
		
		ex2.getConnection();
		
	}

}
