			}				
			case 2 -> {
				ex.writeShop(null);
			}
			case 3 -> {
				ex.seartchSangpum(null);
			}
			case 4 -> {
				ex.deleteShop(null);
			}
			case 5 -> {
				ex.updateShop(0,0,0);
			}
			case 6 -> {
				System.out.println("프로그램을 종료합니다");
				System.exit(0);
			}
			default -> {			
				System.out.println("잘못된 입력");
			}

			}

		}

	}

